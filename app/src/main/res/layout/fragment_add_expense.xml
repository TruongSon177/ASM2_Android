<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFF0F5"> <!-- Màu nền hồng nhạt -->

    <!-- EditText để nhập mô tả chi tiêu -->
    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mô tả chi tiêu"
        android:inputType="text"
        android:backgroundTint="#FF4081"
    android:padding="12dp"
    android:textColor="#000000"
    android:layout_marginBottom="8dp"/>

    <!-- EditText để nhập số tiền -->
    <EditText
        android:id="@+id/editTextAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Số tiền"
        android:inputType="numberDecimal"
        android:backgroundTint="#FF4081"
    android:padding="12dp"
    android:textColor="#000000"
    android:layout_marginBottom="8dp"/>

    <!-- EditText để nhập danh mục chi tiêu -->
    <EditText
        android:id="@+id/editTextCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Danh mục"
        android:inputType="text"
        android:backgroundTint="#FF4081"
    android:padding="12dp"
    android:textColor="#000000"
    android:layout_marginBottom="16dp"/>

    <!-- Button để thêm chi tiêu -->
    <Button
        android:id="@+id/buttonAddExpense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm chi tiêu"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FF4081"
    android:textColor="#FFFFFF"
    android:padding="12dp"/>
</LinearLayout>
